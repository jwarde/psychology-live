@model IEnumerable<PsychologyProject.Models.UserTests>

@{
    ViewBag.Title = "Index";
}

<h2>User Tests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="well well-lg">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReasonForTestUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestRawData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestReturnedData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interpretation)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TestId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReasonForTestUsed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestRawData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestReturnedData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interpretation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>